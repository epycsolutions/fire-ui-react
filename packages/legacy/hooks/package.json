{
    "name": "@fire-ui/hooks",
    "version": "0.0.0",
    "description": "React hooks for Fire components",
    "keywords": [
        "hooks",
        "react",
        "fire ui",
        "utilities"
    ],
    "sideEffects": false,
    "author": "Epyc Solutions",
    "homepage": "https://github.com/epycsolutions/fire-ui-react#readme",
    "license": "MIT",
    "main": "src/index.ts",
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/epycsolutions/fire-ui-react.git",
        "directory": "packages/legacy/hooks"
    },
    "bugs": {
        "url": "https://github.com/epycsolutions/fire-ui-react/issues"
    },
    "dependencies": {
        "@fire-ui/react-utils": "workspace:*",
        "@fire-ui/utils": "workspace:*",
        "compute-scroll-into-view": "3.0.3",
        "copy-to-clipboard": "3.3.3"
    },
    "peerDependencies": {
        "react": ">=18"
    },
    "devDependencies": {
        "react": "18.2.0",
        "clean-package": "2.2.0"
    },
    "scripts": {
        "build": "tsup src --dts",
        "dev": "npm build:fast -- --watch",
        "clean": "rimraf dist .turbo",
        "typecheck": "tsc --noEmit",
        "build:fast": "tsup src",
        "prepack": "clean-package",
        "postpack": "clean-package restore"
    },
    "clean-package": "../../../clean-package.config.json",
    "tsup": {
        "clean": true,
        "target": "ES2019",
        "format": [ "cjs", "esm" ]
    }
}