{
    "name": "@fire-ui/{{componentName}}",
    "version": "0.0.0",
    "description": "{{description}}",
    "keywords": [
        "{{componentName}}"
    ],
    "author": "Epyc Solutions",
    "homepage": "https://github.com/epycsolutions/fire-ui-react#readme",
    "license": "MIT",
    "main": "src/index.ts",
    "sideEffects": false,
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/epycsolutions/fire-ui-react.git",
        "directory": "{{outDir}}/{{componentName}}"
    },
    "bugs": {
        "url": "https://github.com/epycsolutions/fire-ui-react/issues"
    },
    "scripts": {
        "build": "tsup src --dts",
        "dev": "npm build:fast -- --watch",
        "clean": "rimraf dist .turbo",
        "typecheck": "tsc --noEmit",
        "build:fast": "tsup src",
        "prepack": "clean-package",
        "postpack": "clean-package restore",
        "typedocs": "tsx ../../../scripts/generate-type-docs.ts"
    },
    "peerDependencies": {
        "react": ">=18"
    },
    "devDependencies": {
        "clean-package": "2.1.1",
        "react": "^18.0.0"
    },
    "clean-package": "../../../clean-package.config.json"
}